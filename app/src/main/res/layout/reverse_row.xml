<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_margin="10dp"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_profile_img"
        android:layout_width="210dp"
        app:civ_border_color="@color/colorPrimary"
        app:civ_border_width="2dp"
        android:layout_height="210dp"
        android:scaleType="centerCrop"
        android:src="@drawable/lannister"/>

    <TextView
        android:id="@+id/user_profile_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tyrion Lannister"
        android:textStyle="bold"
        android:textSize="14dp"
        android:gravity="center"
        android:textColor="#fff"
        android:layout_above="@+id/user_profile_age"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="1dp"
        android:layout_alignEnd="@+id/user_profile_img" />

    <TextView
        android:id="@+id/user_profile_age"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="20 yrs"
        android:textColor="#fff"
        android:textSize="10dp"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_alignBottom="@+id/user_profile_img"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="30dp"
        android:layout_alignEnd="@+id/user_profile_img" />
</RelativeLayout>
