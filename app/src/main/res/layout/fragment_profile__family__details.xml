<android.support.v4.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:orientation="vertical">


        <android.support.v7.widget.CardView
            app:cardCornerRadius="4dp"
            android:layout_margin="8dp"
            android:elevation="10dp"
            app:cardBackgroundColor="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Family"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20dp"
                    android:textStyle="italic" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Santosh Rane (Father)"
                    android:textColor="#2d2d2d"
                    android:textSize="16dp"
                    android:drawableLeft="@drawable/profile_name"
                    android:gravity="center_vertical"
                    android:drawablePadding="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Employee at Universal Links (Father)"
                    android:textColor="#2d2d2d"
                    android:textSize="16dp"
                    android:drawableLeft="@drawable/profile_designation"
                    android:gravity="center_vertical"
                    android:drawablePadding="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Upper Middle Class Family"
                    android:textColor="#2d2d2d"
                    android:textSize="16dp"
                    android:drawableLeft="@drawable/ic_action_profile_status"
                    android:gravity="center_vertical"
                    android:drawablePadding="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Nuclear family with Modern values"
                    android:textColor="#2d2d2d"
                    android:textSize="16dp"
                    android:drawableLeft="@drawable/ic_action_profile_value"
                    android:gravity="center_vertical"
                    android:drawablePadding="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Natively from Goa"
                    android:textColor="#2d2d2d"
                    android:textSize="16dp"
                    android:drawableLeft="@drawable/profile_location"
                    android:gravity="center_vertical"
                    android:drawablePadding="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="None (Subcaste)"
                    android:textColor="#2d2d2d"
                    android:textSize="16dp"
                    android:drawableLeft="@drawable/profile_caste"
                    android:gravity="center_vertical"
                    android:drawablePadding="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Yashwant Rane (Grandfather)"
                    android:textColor="#2d2d2d"
                    android:textSize="16dp"
                    android:drawableLeft="@drawable/profile_name"
                    android:gravity="center_vertical"
                    android:drawablePadding="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Rane (Mama's Surname)"
                    android:textColor="#2d2d2d"
                    android:textSize="16dp"
                    android:drawableLeft="@drawable/profile_name"
                    android:gravity="center_vertical"
                    android:drawablePadding="10dp"/>

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            app:cardCornerRadius="4dp"
            android:layout_margin="8dp"
            android:elevation="10dp"
            app:cardBackgroundColor="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Relatives"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20dp"
                    android:textStyle="italic" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Brother"
                    android:textColor="#2d2d2d"
                    android:textSize="16dp"
                    android:drawableLeft="@drawable/profile_name"
                    android:gravity="center_vertical"
                    android:drawablePadding="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Mervin Dalmet"
                    android:textColor="#2d2d2d"
                    android:textSize="16dp"
                    android:drawableLeft="@drawable/profile_name"
                    android:gravity="center_vertical"
                    android:drawablePadding="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Employee at Shaadi.com"
                    android:textSize="16dp"
                    android:textColor="#2d2d2d"
                    android:layout_marginBottom="10dp"
                    android:drawableLeft="@drawable/profile_designation"
                    android:gravity="center_vertical"
                    android:drawablePadding="10dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lives in Mumbai,Maharashtra,India"
                    android:textSize="16dp"
                    android:textColor="#2d2d2d"
                    android:layout_marginBottom="10dp"
                    android:drawableLeft="@drawable/profile_location"
                    android:gravity="center_vertical"
                    android:drawablePadding="10dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Contact him at 9004918906"
                    android:textColor="#2d2d2d"
                    android:textSize="16dp"
                    android:drawableLeft="@drawable/profile_contact"
                    android:gravity="center_vertical"
                    android:drawablePadding="10dp"/>

            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>