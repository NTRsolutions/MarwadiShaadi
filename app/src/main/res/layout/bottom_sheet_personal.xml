<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            app:cardCornerRadius="4dp"
            android:layout_margin="2dp"
            android:elevation="10dp"
            app:cardBackgroundColor="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:orientation="vertical">


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_below="@+id/text3"
                    android:hint="Contact Number"
                    android:textSize="16dp"
                    android:textColorHint="#747474"
                    android:drawableLeft="@drawable/phone"
                    android:drawablePadding="10dp"
                    android:padding="6dp"
                    android:background="#fff"
                    android:id="@+id/mobile"
                    android:inputType="phone"
                    android:ems="10"
                    />


                <AutoCompleteTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:hint="Location"
                    android:textSize="16dp"
                    android:textColorHint="#747474"
                    android:drawableLeft="@drawable/userlocation"
                    android:drawablePadding="10dp"
                    android:padding="6dp"
                    android:background="#fff"
                    android:id="@+id/location"
                    android:ems="10"
                    />


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_below="@+id/text3"
                    android:hint="Weight"
                    android:textSize="16dp"
                    android:textColorHint="#747474"
                    android:drawableLeft="@drawable/weight"
                    android:drawablePadding="10dp"
                    android:padding="6dp"
                    android:background="#fff"
                    android:id="@+id/weight"
                    android:inputType="number"
                    android:ems="10"
                    />

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/user_caste"
                    android:padding="10dp"
                    android:textSize="16dp"
                    android:entries="@array/caste_array"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1" />

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:textSize="20dp"
                    android:entries="@array/physicalstatus_array"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1" />


                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:textSize="16dp"
                    android:entries="@array/built_array"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1" />


                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/advnext"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="30dp"
                    android:text="Update"
                    android:background="@color/colorPrimary"
                    android:textSize="15dp"
                    />


            </LinearLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>
</ScrollView>