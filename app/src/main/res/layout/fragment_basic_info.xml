<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:orientation="vertical">

            <android.support.v7.widget.CardView
            app:cardCornerRadius="4dp"
            android:layout_margin="8dp"
            android:elevation="10dp"
                app:cardBackgroundColor="#fcb09f"
                android:layout_width="match_parent"
            android:layout_height="wrap_content"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto">

        <android.support.v7.widget.CardView
            app:cardCornerRadius="4dp"
            android:layout_margin="2dp"
            android:elevation="10dp"
            app:cardBackgroundColor="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Individual Details"
                        android:textSize="20dp"
                        android:textStyle="italic"
                        android:layout_marginBottom="10dp"
                        />


                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/Height"
                        android:padding="10dp"
                        android:entries="@array/height_array"
                        android:textSize="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_weight="1" />

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/Built"
                        android:padding="10dp"
                        android:textSize="16dp"
                        android:entries="@array/built_array"
                        android:layout_marginTop="20dp"
                        android:layout_weight="1" />

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/weight"
                        android:padding="10dp"
                        android:textSize="16dp"
                        android:entries="@array/weight_array"
                        android:layout_marginTop="20dp"
                        android:layout_weight="1" />

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/Marital_status"
                        android:padding="10dp"
                        android:textSize="20dp"
                        android:entries="@array/status_array"
                        android:layout_marginTop="20dp"
                        android:layout_weight="1" />

            </LinearLayout>
            </android.support.v7.widget.CardView>
    </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            app:cardCornerRadius="4dp"
            android:layout_margin="8dp"
            android:elevation="10dp"
            app:cardBackgroundColor="#fcb09f"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto">

        <android.support.v7.widget.CardView
        app:cardCornerRadius="4dp"
        android:layout_margin="2dp"
        android:elevation="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Professional Details"
                    android:textSize="20dp"
                    android:textStyle="italic"
                    android:layout_marginBottom="10dp"
                    />

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/Education"
                        android:padding="10dp"
                        android:entries="@array/education_array"
                        android:textSize="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_weight="1" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:textSize="16dp"
                        android:hint="Highest Degree"
                        android:textColorHint="#747474"
                        android:drawableLeft="@drawable/occupation"
                        android:drawablePadding="10dp"
                        android:padding="6dp"
                        android:id="@+id/highest_degree"
                        android:inputType="textPersonName"
                        android:ems="10"
                        android:background="#fff"
                        />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:textSize="16dp"
                        android:hint="Occupation"
                        android:textColorHint="#747474"
                        android:drawableLeft="@drawable/occupation"
                        android:drawablePadding="10dp"
                        android:padding="6dp"
                        android:id="@+id/your_occupation"
                        android:inputType="textPersonName"
                        android:ems="10"
                        android:background="#fff"
                        />

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/designation"
                        android:padding="10dp"
                        android:entries="@array/designation_array"
                        android:textSize="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_weight="1" />


                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/Annual_income"
                        android:padding="10dp"
                        android:entries="@array/aincome_array"
                        android:textSize="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_weight="1" />


                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:textSize="16dp"
                        android:hint="Company's Name"
                        android:textColorHint="#747474"
                        android:drawableLeft="@drawable/company"
                        android:drawablePadding="10dp"
                        android:padding="6dp"
                        android:id="@+id/company_name"
                        android:inputType="textPersonName"
                        android:ems="10"
                        android:background="#fff"
                        />

</LinearLayout>
    </android.support.v7.widget.CardView>
</android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            app:cardCornerRadius="4dp"
            android:layout_margin="8dp"
            android:elevation="10dp"
            app:cardBackgroundColor="#fcb09f"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto">

        <android.support.v7.widget.CardView
            app:cardCornerRadius="4dp"
            android:layout_margin="2dp"
            android:elevation="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Family Details"
                    android:textSize="20dp"
                    android:textStyle="italic"
                    android:layout_marginBottom="10dp"
                    />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:hint="Father's Name"
                    android:drawableLeft="@drawable/lastname"
                    android:drawablePadding="10dp"
                    android:padding="6dp"
                    android:textColorHint="#747474"
                    android:textSize="16dp"
                    android:id="@+id/first_name"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:background="#fff"
                    />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:textSize="16dp"
                    android:hint="Father's Occupation"
                    android:textColorHint="#747474"
                    android:drawableLeft="@drawable/occupation"
                    android:drawablePadding="10dp"
                    android:padding="6dp"
                    android:id="@+id/last_name"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:background="#fff"
                    />

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/Family_status"
                    android:padding="10dp"
                    android:textSize="20dp"
                    android:entries="@array/fstatus_array"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1" />

            </LinearLayout>
        </android.support.v7.widget.CardView>
</android.support.v7.widget.CardView>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/advnext"
            android:textColor="#fff"
            android:textStyle="bold"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="30dp"
            android:text="Next"
            android:backgroundTint="@color/colorPrimary"
            android:background="@drawable/button_simple_border"
            android:textSize="20dp"
            android:layout_marginBottom="60dp"
            android:layout_weight="0.5"
            style="?android:buttonBarButtonStyle"
            />
    </LinearLayout>
</ScrollView>