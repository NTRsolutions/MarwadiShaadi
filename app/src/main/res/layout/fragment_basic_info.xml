<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:focusableInTouchMode="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:orientation="vertical">

            <android.support.v7.widget.CardView
            app:cardCornerRadius="4dp"
            android:layout_margin="8dp"
            android:elevation="10dp"
                app:cardBackgroundColor="#fcb09f"
                android:layout_width="match_parent"
            android:layout_height="wrap_content"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto">

        <android.support.v7.widget.CardView
            app:cardCornerRadius="4dp"
            android:layout_margin="2dp"
            android:elevation="10dp"
            app:cardBackgroundColor="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Individual Details"
                        android:textSize="20dp"
                        android:textStyle="italic"
                        android:layout_marginBottom="10dp"
                        />


                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:entries="@array/height_array"
                        android:textSize="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_weight="1" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:textSize="16dp"
                        android:hint="Weight"
                        android:textColorHint="#747474"
                        android:drawablePadding="10dp"
                        android:padding="10dp"
                        android:inputType="number"
                        android:ems="10"
                        android:layout_marginLeft="10dp"
                        android:background="#fff"
                        />
                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:textSize="16dp"
                        android:entries="@array/built_array"
                        android:layout_marginTop="20dp"
                        android:layout_weight="1" />


                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:textSize="20dp"
                        android:entries="@array/status_array"
                        android:layout_marginTop="20dp"
                        android:layout_weight="1" />

            </LinearLayout>
            </android.support.v7.widget.CardView>
    </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            app:cardCornerRadius="4dp"
            android:layout_margin="8dp"
            android:elevation="10dp"
            app:cardBackgroundColor="#fcb09f"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto">

        <android.support.v7.widget.CardView
        app:cardCornerRadius="4dp"
        android:layout_margin="2dp"
        android:elevation="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Professional Details"
                    android:textSize="20dp"
                    android:textStyle="italic"
                    android:layout_marginBottom="10dp"
                    />

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:entries="@array/education_array"
                        android:textSize="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_weight="1" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:textSize="16dp"
                        android:hint="Highest Degree(B.Tech,B.Com,MBA)"
                        android:textColorHint="#747474"
                        android:drawablePadding="10dp"
                        android:padding="10dp"
                        android:inputType="textPersonName"
                        android:ems="10"
                        android:layout_marginLeft="10dp"
                        android:background="#fff"
                        />
                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:entries="@array/occupation_array"
                        android:textSize="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_weight="1" />
                      <EditText
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:layout_marginTop="15dp"
                         android:textSize="16dp"
                         android:hint="Company's Name"
                         android:textColorHint="#747474"
                         android:drawablePadding="10dp"
                         android:padding="10dp"
                         android:inputType="textPersonName"
                         android:ems="10"
                          android:layout_marginLeft="10dp"
                         android:background="#fff"
                         />


                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:entries="@array/designation_array"
                        android:textSize="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_weight="1" />


                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:entries="@array/aincome_array"
                        android:textSize="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_weight="1" />




</LinearLayout>
    </android.support.v7.widget.CardView>
</android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            app:cardCornerRadius="4dp"
            android:layout_margin="8dp"
            android:elevation="10dp"
            app:cardBackgroundColor="#fcb09f"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto">

        <android.support.v7.widget.CardView
            app:cardCornerRadius="4dp"
            android:layout_margin="2dp"
            android:elevation="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Family Details"
                    android:textSize="20dp"
                    android:textStyle="italic"
                    android:layout_marginBottom="10dp"
                    />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:hint="Father's Name"
                    android:drawablePadding="10dp"
                    android:padding="10dp"
                    android:layout_marginLeft="10dp"
                    android:textColorHint="#747474"
                    android:textSize="16dp"
                    android:id="@+id/first_name"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:background="#fff"
                    />

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:entries="@array/father_occupation_array"
                    android:textSize="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1" />

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:textSize="20dp"
                    android:entries="@array/fstatus_array"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1" />

            </LinearLayout>
        </android.support.v7.widget.CardView>
</android.support.v7.widget.CardView>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/advnext"
            android:textColor="#fff"
            android:textStyle="bold"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="30dp"
            android:text="Next"
            android:background="@color/colorPrimary"
            android:textSize="20dp"
            android:layout_marginBottom="80dp"
            android:layout_weight="0.5"
            />
    </LinearLayout>
</ScrollView>
