<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout        android:focusableInTouchMode="true"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            app:cardCornerRadius="4dp"
            android:layout_margin="2dp"
            android:elevation="10dp"
            app:cardBackgroundColor="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:orientation="vertical">

                <Spinner
                    android:id="@+id/profession"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:entries="@array/designation_array"
                    android:textSize="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1" />

                <EditText
                    android:id="@+id/job_company"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:textSize="16dp"
                    android:hint="Company's Name"
                    android:textColorHint="#747474"
                    android:drawablePadding="10dp"
                    android:padding="10dp"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:layout_marginLeft="10dp"
                    android:background="#fff"
                    />

                <Spinner
                    android:id="@+id/occupation"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:entries="@array/occupation_array"
                    android:textSize="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1" />




                <AutoCompleteTextView
                    android:id="@+id/job_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:hint="Work Location"
                    android:textSize="16dp"
                    android:textColorHint="#747474"
                    android:drawableLeft="@drawable/signup_location"
                    android:drawablePadding="10dp"
                    android:padding="6dp"
                    android:background="#fff"
                    android:ems="10"
                    />

                <Spinner
                    android:id="@+id/edit_annual_income"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    android:entries="@array/aincome_array"
                    android:padding="10dp"
                    android:textSize="20dp"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/professionUpdate"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="30dp"
                    android:textAllCaps="false"
                    android:text="Update"
                    android:background="@color/colorPrimary"
                    android:textSize="15dp"
                    />

            </LinearLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>
</ScrollView>