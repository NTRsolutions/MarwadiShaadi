<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:focusableInTouchMode="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            app:cardCornerRadius="4dp"
            android:layout_margin="2dp"
            android:elevation="10dp"
            app:cardBackgroundColor="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:orientation="vertical">


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:hint="Birth Time"
                    android:textSize="16dp"
                    android:textColorHint="#747474"
                    android:drawableLeft="@drawable/signup_dob"
                    android:drawablePadding="10dp"
                    android:padding="6dp"
                    android:id="@+id/birthtime"
                    android:inputType="textEmailAddress"
                    android:clickable="true"
                    android:ems="10"
                    android:background="#fff"
                    />

                <AutoCompleteTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:hint="Birth Place"
                    android:textSize="16dp"
                    android:textColorHint="#747474"
                    android:drawableLeft="@drawable/signup_location"
                    android:drawablePadding="10dp"
                    android:padding="6dp"
                    android:background="#fff"
                    android:id="@+id/birth_location"
                    android:ems="10"
                    />

                <EditText
                    android:id="@+id/gotra"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:textSize="16dp"
                    android:hint="Gotra"
                    android:textColorHint="#747474"
                    android:drawableLeft="@drawable/signup_gotra"
                    android:drawablePadding="10dp"
                    android:padding="6dp"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:background="#fff"
                    />

                <Spinner
                    android:id="@+id/manglik"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:textSize="20dp"
                    android:entries="@array/manglik_array"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1" />

                <Spinner
                    android:id="@+id/match_horoscope"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:textSize="20dp"
                    android:entries="@array/horoscope_array"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/horoscope_update"
                    android:textColor="#fff"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="30dp"
                    android:text="Update"
                    android:background="@color/colorPrimary"
                    android:textSize="15dp"
                    />
            </LinearLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>
</ScrollView>