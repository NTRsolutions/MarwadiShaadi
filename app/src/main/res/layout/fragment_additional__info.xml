<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:orientation="vertical">


        <android.support.v7.widget.CardView
            app:cardCornerRadius="4dp"
            android:layout_margin="8dp"
            android:elevation="10dp"
            app:cardBackgroundColor="#fcb09f"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto">

            <android.support.v7.widget.CardView
                app:cardCornerRadius="4dp"
                android:layout_margin="2dp"
                android:elevation="10dp"
                app:cardBackgroundColor="#fff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Additional Personal Details"
                        android:textSize="20dp"
                        android:textStyle="italic"
                        android:layout_marginBottom="10dp"
                        />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/text3"
                        android:drawableLeft="@drawable/aboutme"
                        android:drawablePadding="10dp"
                        android:padding="6dp"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:textColor="#747474"
                        android:background="@null"
                        android:layout_marginTop="15dp"
                        android:text="About Me"
                        android:ems="10"
                        android:textSize="16dp"
                        />

                    <EditText
                        android:layout_marginTop="15dp"
                        android:textSize="16dp"
                        android:hint="Write about yourself..."
                        android:textColorHint="#747474"
                        android:padding="6dp"
                        android:lines="8"
                        android:minLines="6"
                        android:gravity="top|left"
                        android:maxLines="10"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:scrollbars="vertical"
                        android:id="@+id/aboutme"
                        android:inputType="textMultiLine"
                        android:ems="10"
                        android:background="#fff"
                        />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:scrollbars="vertical"
                        android:maxLines="10"
                        android:gravity="top|left"
                        android:minLines="1"
                        android:textSize="16dp"
                        android:hint="Hobbies/Interest"
                        android:textColorHint="#747474"
                        android:drawableLeft="@drawable/hobby"
                        android:drawablePadding="10dp"
                        android:padding="6dp"
                        android:id="@+id/hobbies"
                        android:inputType="textImeMultiLine"
                        android:ems="10"
                        android:background="#fff"
                        />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:textSize="16dp"
                        android:hint="Grandfather's Name"
                        android:textColorHint="#747474"
                        android:drawableLeft="@drawable/grandpa"
                        android:drawablePadding="10dp"
                        android:padding="6dp"
                        android:id="@+id/grandfname"
                        android:inputType="textPersonName"
                        android:ems="10"
                        android:background="#fff"
                        />


                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/ftype"
                        android:padding="10dp"
                        android:entries="@array/ftype_array"
                        android:textSize="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_weight="1" />

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/fvalues"
                        android:padding="10dp"
                        android:textSize="16dp"
                        android:entries="@array/fvalues_array"
                        android:layout_marginTop="20dp"
                        android:layout_weight="1" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:textSize="16dp"
                        android:hint="Native Place"
                        android:textColorHint="#747474"
                        android:drawableLeft="@drawable/userlocation"
                        android:drawablePadding="10dp"
                        android:padding="6dp"
                        android:id="@+id/nativeplace"
                        android:inputType="textPersonName"
                        android:ems="10"
                        android:background="#fff"
                        />


                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:textSize="16dp"
                        android:hint="Subcaste ( If any )"
                        android:textColorHint="#747474"
                        android:drawableLeft="@drawable/caste"
                        android:drawablePadding="10dp"
                        android:padding="6dp"
                        android:id="@+id/subcaste"
                        android:inputType="textPersonName"
                        android:ems="10"
                        android:background="#fff"
                        />



                </LinearLayout>
            </android.support.v7.widget.CardView>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            app:cardCornerRadius="4dp"
            android:layout_margin="8dp"
            android:elevation="10dp"
            app:cardBackgroundColor="#fcb09f"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto">

            <android.support.v7.widget.CardView
                app:cardCornerRadius="4dp"
                android:layout_margin="2dp"
                android:elevation="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Education/Occupational Details"
                        android:textSize="20dp"
                        android:textStyle="italic"
                        android:layout_marginBottom="10dp"
                        />


                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:textSize="16dp"
                        android:hint="Institute Name"
                        android:textColorHint="#747474"
                        android:drawableLeft="@drawable/institute"
                        android:drawablePadding="10dp"
                        android:padding="6dp"
                        android:id="@+id/highests_degree"
                        android:inputType="textPersonName"
                        android:ems="10"
                        android:background="#fff"
                        />

                    <AutoCompleteTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:hint="Work Location"
                        android:textSize="16dp"
                        android:textColorHint="#747474"
                        android:drawableLeft="@drawable/userlocation"
                        android:drawablePadding="10dp"
                        android:padding="6dp"
                        android:background="#fff"
                        android:id="@+id/locate"
                        android:ems="10"
                        />


                </LinearLayout>
            </android.support.v7.widget.CardView>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            app:cardCornerRadius="4dp"
            android:layout_margin="8dp"
            android:elevation="10dp"
            app:cardBackgroundColor="#fcb09f"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto">

            <android.support.v7.widget.CardView
                app:cardCornerRadius="4dp"
                android:layout_margin="2dp"
                android:elevation="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lifestyle Details"
                        android:textSize="20dp"
                        android:textStyle="italic"
                        android:layout_marginBottom="10dp"
                        />

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/diet_status"
                        android:padding="10dp"
                        android:textSize="20dp"
                        android:entries="@array/diet_array"
                        android:layout_marginTop="20dp"
                        android:layout_weight="1" />

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/smoke_status"
                        android:padding="10dp"
                        android:textSize="20dp"
                        android:entries="@array/smoking_array"
                        android:layout_marginTop="20dp"
                        android:layout_weight="1" />

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/drink_status"
                        android:padding="10dp"
                        android:textSize="20dp"
                        android:entries="@array/drinking_array"
                        android:layout_marginTop="20dp"
                        android:layout_weight="1" />

                </LinearLayout>
            </android.support.v7.widget.CardView>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            app:cardCornerRadius="4dp"
            android:layout_margin="8dp"
            android:elevation="10dp"
            app:cardBackgroundColor="#fcb09f"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto">

            <android.support.v7.widget.CardView
                app:cardCornerRadius="4dp"
                android:layout_margin="2dp"
                android:elevation="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Physical Details"
                        android:textSize="20dp"
                        android:textStyle="italic"
                        android:layout_marginBottom="10dp"
                        />


                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/complexion_status"
                        android:padding="10dp"
                        android:textSize="20dp"
                        android:entries="@array/complexion_array"
                        android:layout_marginTop="20dp"
                        android:layout_weight="1" />

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/physical_status"
                        android:padding="10dp"
                        android:textSize="20dp"
                        android:entries="@array/physicalstatus_array"
                        android:layout_marginTop="20dp"
                        android:layout_weight="1" />


                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:hint="Weight"
                        android:textSize="16dp"
                        android:textColorHint="#747474"
                        android:drawableLeft="@drawable/weight"
                        android:drawablePadding="10dp"
                        android:padding="6dp"
                        android:id="@+id/weight"
                        android:inputType="textEmailAddress"
                        android:clickable="true"
                        android:ems="10"
                        android:background="#fff"
                        />



                </LinearLayout>
            </android.support.v7.widget.CardView>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            app:cardCornerRadius="4dp"
            android:layout_margin="8dp"
            android:elevation="10dp"
            app:cardBackgroundColor="#fcb09f"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto">

            <android.support.v7.widget.CardView
                app:cardCornerRadius="4dp"
                android:layout_margin="2dp"
                android:elevation="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Horoscope Details"
                        android:textSize="20dp"
                        android:textStyle="italic"
                        android:layout_marginBottom="10dp"
                        />



                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:hint="Birth Time"
                        android:textSize="16dp"
                        android:textColorHint="#747474"
                        android:drawableLeft="@drawable/dob"
                        android:drawablePadding="10dp"
                        android:padding="6dp"
                        android:id="@+id/dob"
                        android:inputType="textEmailAddress"
                        android:clickable="true"
                        android:ems="10"
                        android:background="#fff"
                        />

                    <AutoCompleteTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:hint="Birth Place"
                        android:textSize="16dp"
                        android:textColorHint="#747474"
                        android:drawableLeft="@drawable/userlocation"
                        android:drawablePadding="10dp"
                        android:padding="6dp"
                        android:background="#fff"
                        android:id="@+id/location"
                        android:ems="10"
                        />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:textSize="16dp"
                        android:hint="Gotra"
                        android:textColorHint="#747474"
                        android:drawableLeft="@drawable/gotra"
                        android:drawablePadding="10dp"
                        android:padding="6dp"
                        android:id="@+id/highest_degree"
                        android:inputType="textPersonName"
                        android:ems="10"
                        android:background="#fff"
                        />

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/manglik_status"
                        android:padding="10dp"
                        android:textSize="20dp"
                        android:entries="@array/manglik_array"
                        android:layout_marginTop="20dp"
                        android:layout_weight="1" />

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/horoscope_status"
                        android:padding="10dp"
                        android:textSize="20dp"
                        android:entries="@array/horoscope_array"
                        android:layout_marginTop="20dp"
                        android:layout_weight="1" />

                </LinearLayout>
            </android.support.v7.widget.CardView>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            app:cardCornerRadius="4dp"
            android:layout_margin="8dp"
            android:elevation="10dp"
            app:cardBackgroundColor="#fcb09f"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto">

            <android.support.v7.widget.CardView
                app:cardCornerRadius="4dp"
                android:layout_margin="2dp"
                android:elevation="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Relation Details"
                        android:textSize="20dp"
                        android:textStyle="italic"
                        android:layout_marginBottom="10dp"
                        />


                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/relation_name_status"
                        android:padding="10dp"
                        android:textSize="20dp"
                        android:entries="@array/relation_name_array"
                        android:layout_marginTop="20dp"
                        android:layout_weight="1" />


                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:hint="Name"
                        android:drawableLeft="@drawable/lastname"
                        android:drawablePadding="10dp"
                        android:padding="6dp"
                        android:textColorHint="#747474"
                        android:textSize="16dp"
                        android:id="@+id/first_name"
                        android:inputType="textPersonName"
                        android:ems="10"
                        android:background="#fff"
                        />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:textSize="16dp"
                        android:hint="Occupation"
                        android:textColorHint="#747474"
                        android:drawableLeft="@drawable/occupation"
                        android:drawablePadding="10dp"
                        android:padding="6dp"
                        android:id="@+id/your_occupation"
                        android:inputType="textPersonName"
                        android:ems="10"
                        android:background="#fff"
                        />

                    <AutoCompleteTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:hint="Location"
                        android:textSize="16dp"
                        android:textColorHint="#747474"
                        android:drawableLeft="@drawable/userlocation"
                        android:drawablePadding="10dp"
                        android:padding="6dp"
                        android:background="#fff"
                        android:id="@+id/locations"
                        android:ems="10"
                        />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_below="@+id/text3"
                        android:hint="Mobile Number"
                        android:textSize="16dp"
                        android:textColorHint="#747474"
                        android:drawableLeft="@drawable/phone"
                        android:drawablePadding="10dp"
                        android:padding="6dp"
                        android:background="#fff"
                        android:id="@+id/mobile"
                        android:inputType="phone"
                        android:ems="10"
                        />





                </LinearLayout>
            </android.support.v7.widget.CardView>
        </android.support.v7.widget.CardView>


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/advnext"
            android:textColor="#fff"
            android:textStyle="bold"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="30dp"
            android:text="Almost there!"
            android:background="@color/colorPrimary"
            android:textSize="20dp"
            android:layout_marginBottom="60dp"
            android:layout_weight="0.5"
            />
    </LinearLayout>
</ScrollView>